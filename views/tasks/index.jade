h1 Your Tasks
p
  a(href='/tasks/new', class='btn primary') Add a Task

-if(typeof flash != 'undefined')
  - if(flash.warning)
    div.alert-message.warning.fade.in
      a(class="close", href="#")×
      p= flash.warning
  - if(flash.info)
    div(data-alert='alert').alert-message.success.fade.in
      a(class="close", href="#")×
      p= flash.info

table
  tr
    th Task
    th 
    th 
    each task in docs
      tr
        td
          a(href="/tasks/#{task.id}") 
            #{task.task}
        td
          a(href="/tasks/#{task.id}/edit") Edit
        td
          form(method='post', action='/tasks/' + task.id)
            input(name='_method', value='DELETE', type='hidden')
            button(type='submit') Delete
